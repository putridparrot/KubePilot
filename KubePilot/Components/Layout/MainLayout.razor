@inherits LayoutComponentBase

    <FluentLayout>
        <FluentHeader >
            <FluentButton>
                <FluentIcon Icon="Icons.Regular.Size20.VirtualNetwork" />
            </FluentButton>
            <FluentSpacer />
            <FluentButton>
                <FluentIcon Icon="Icons.Regular.Size20.Settings"/>
            </FluentButton>
        </FluentHeader>
        <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
            <NavMenu/>
            <FluentBodyContent Style="height: 100vh">
                <ErrorBoundary @ref="errorBoundary">
                    <ChildContent>
                        <div class="content">
                            @Body
                        </div>
                    </ChildContent>
                    <ErrorContent Context="ex">
                        <div class="blazor-error-boundary">
                            @*                         <FluentButton OnClick="@(_ => errorBoundary?.Recover())">
                            <FluentIcon Icon="Icons.Regular.Size16.AlertOff"></FluentIcon>
                        </FluentButton>
 *@ @ex.Message
                        </div>
                    </ErrorContent>
                </ErrorBoundary>
            
                <FluentDialogProvider />
                <FluentMenuProvider />
                <FluentTooltipProvider />

            </FluentBodyContent>
        </FluentStack>
        @*     <FluentFooter>
        <FluentSpacer />
    </FluentFooter>
 *@
    </FluentLayout>

@code {
    private ErrorBoundary? errorBoundary;
}
