@page "/endpoints"
@inject IKubernetesClientService KubernetesClientService;

<ListComponent Title="Endpoints" IsLoading="@_loading" KubectlHint="@_kubeCtlHint" Selected="@_selected" OnRefresh="async () => await LoadAsync()">
    <Actions>
        <FluentCombobox Autocomplete="ComboboxAutocomplete.Both" Placeholder="Select Namespace" Height="200px" TOption="string" Items="@_namespaces" @bind-Value="@_selectedNamespace" SelectedOptionChanged="OnNamespaceChangedAsync" />
    </Actions>

    <ChildContent>
        <FluentDataGrid TGridItem="Selectable<V1Endpoints>" Items="@FilteredItems" HeaderCellAsButtonWithMenu="false">
            <EmptyContent>
                <div>@(_failure ?? Consts.NoDataToShow)</div>
            </EmptyContent>
            <ChildContent>
                <SelectColumn TGridItem="Selectable<V1Endpoints>"
                      SelectMode="DataGridSelectMode.Single"
                      SelectFromEntireRow="true"
                      Property="@(p => p.Selected)"
                      OnSelect="@(p => Select(p))" />
                <PropertyColumn Title="Namespace" Property="@(p => p.Item.Metadata.NamespaceProperty)" Sortable="true" />
                <PropertyColumn Title="Name" Property="@(p => p.Item.Metadata.Name)" Sortable="true" IsDefaultSortColumn="true"
                    Comparer="@ColumnStringComparer.Instance" Filtered="!string.IsNullOrWhiteSpace(_nameFilter)">
                    <ColumnOptions>
                            <FluentSearch Autofocus=true @bind-Value=_nameFilter
                                          @oninput="NameFilter"
                                          Placeholder="Name..." />
                    </ColumnOptions>
                </PropertyColumn>
                <PropertyColumn Title="Endpoints" Property="@(p => GetEndpointIps(p))" Sortable="true" />
                <PropertyColumn Title="Age" Property="@(p => p.Item.Metadata.CreationTimestamp.ToAge())" Sortable="true" />
            </ChildContent>
        </FluentDataGrid>
    </ChildContent>
</ListComponent>

@code {
    private bool _loading;
    private IQueryable<Selectable<V1Endpoints>>? _list;
    private V1Endpoints? _selected;
    private string? _failure;
    private string _kubeCtlHint = string.Empty;
    private string[]? _namespaces;
    private string? _selectedNamespace;
    private string _nameFilter = string.Empty; 

    private IQueryable<Selectable<V1Endpoints>>? FilteredItems => _list?.Where(p => 
        p.Item.Metadata.Name.Contains(_nameFilter, StringComparison.CurrentCultureIgnoreCase)
    );

    private static string GetEndpointIps(Selectable<V1Endpoints> item)
    {
        if (item.Item.Subsets is null)
            return string.Empty;

        var subsets = item.Item.Subsets.Where(s => s is not null && s.Addresses is not null);
        var addresses = subsets.SelectMany(s => s.Addresses.Select(a => a.Ip)); 
        return addresses.CsvJoin() ?? string.Empty;
    }

    protected override async Task OnInitializedAsync()
    {
        _selectedNamespace = KubernetesClientService.GetCurrentNamespace();
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            _loading = true;
            var items = await KubernetesClientService.GetEndpointsAsync(_selectedNamespace);
            switch (items)
            {
                case ISuccess:
                    _list = items.Value.Items.ToSelectableQueryable();
                    _failure = null;
                    break;
                case IFailure failure:
                    _list = null;
                    _failure = failure.FailureMessage();
                    break;
            }
            _kubeCtlHint = $"kubectl get endpoints {_selectedNamespace.NamespaceParameter()}";
            _namespaces = await KubernetesClientService.GetNamespaceNamesAsync();
        }
        finally
        {
            _loading = false;
        }
    }

    private void Select((Selectable<V1Endpoints> Item, bool Selected) p)
    {
        p.Item.Selected = p.Selected;
        _selected = p.Item.Selected ? p.Item.Item : null;
    }

    private async Task OnNamespaceChangedAsync(string? newNamespace)
    {
        _selectedNamespace = newNamespace;
        await LoadAsync();
    }


    private void NameFilter(ChangeEventArgs args)
    {
        if (args.Value is string value)
        {
            _nameFilter = value;
        }
    }
}