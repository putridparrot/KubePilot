@page "/roles"
@inject IKubernetesClientService KubernetesClientService;

<ListComponent Title="Roles" IsLoading="@_loading" KubectlHint="@_kubeCtlHint" Selected="@_selected" OnRefresh="async () => await LoadAsync()">
    <Actions>
        <FluentSelect TOption="string" Items="@_namespaces" @bind-Value="@_selectedNamespace" SelectedOptionChanged="OnNamespaceChangedAsync" />
    </Actions>


    <ChildContent>
        <FluentDataGrid TGridItem="Selectable<V1Role>" Items="@_list" HeaderCellAsButtonWithMenu="false">
            <EmptyContent>
                <div>@(_failure ?? "No data to show")</div>
            </EmptyContent>
            <ChildContent>
                <SelectColumn TGridItem="Selectable<V1Role>"
                      SelectMode="DataGridSelectMode.Single"
                      SelectFromEntireRow="true"
                      Property="@(p => p.Selected)"
                      OnSelect="@(p => Select(p))" />
                <PropertyColumn Title="Name" Property="@(p => p.Item.Metadata.Name)" Sortable="true" />
                <PropertyColumn Title="Creation Timestamp" Property="@(p => p.Item.Metadata.CreationTimestamp)" Sortable="true" />
            </ChildContent>
        </FluentDataGrid>
    </ChildContent>
</ListComponent>

@code {
    private bool _loading;
    private IQueryable<Selectable<V1Role>>? _list;
    private V1Role? _selected;
    private string? _failure;
    private string _kubeCtlHint = string.Empty;
    private string[]? _namespaces;
    private string? _selectedNamespace;


    protected override async Task OnInitializedAsync()
    {
        _selectedNamespace = KubernetesClientService.GetCurrentNamespace();
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        try
        {
            _loading = true;
            var items = await KubernetesClientService.GetRolesAsync(_selectedNamespace);
            switch (items)
            {
                case ISuccess:
                    _list = items.Value.Items.ToSelectableQueryable();
                    _failure = null;
                    break;
                case IFailure failure:
                    _list = null;
                    _failure = failure.FailureMessage();
                    break;
            }
            _namespaces = await KubernetesClientService.GetNamespaceNamesAsync();
        }
        finally
        {
            _loading = false;
        }
    }

    private void Select((Selectable<V1Role> Item, bool Selected) p)
    {
        p.Item.Selected = p.Selected;
        _selected = p.Item.Selected ? p.Item.Item : null;
    }

    private async Task OnNamespaceChangedAsync(string? newNamespace)
    {
        _selectedNamespace = newNamespace;
        await LoadAsync();
    }

}